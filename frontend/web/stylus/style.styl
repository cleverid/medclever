$widthPage = 1200px;
$widthColumnLeft = 300px;
$widthColumnCenter = $widthPage - $widthColumnLeft;

html, body { margin: 0; padding: 0; width: 100%; height: 100%; }
html { background: url("./../image/bg-fon.jpg") }
body { background: url("./../image/bg-fon-line.png") }
.wrapper-content { width: $widthPage; min-height: 100%; margin: 0 auto; background-color: #ffffff; }
.header { height: 240px; background: url("./../image/bg-header.png");
  position: relative; }
.header .logo { background: url("./../image/logo.png");
  height: 97px; width: 396px;
  display: block; position: absolute; top: 70px; left: 20px; }
.column-left { width: $widthColumnLeft; float: left; }
.column-center { width: $widthColumnCenter; float: right; }
.wrapper-content-foother { width: $widthPage; margin: 0 auto; }
.footer { background: url("./../image/bg-footer.png"); background-color: E8E8E8;
  height: 100px; width: $widthPage; margin-top: -100px; }
.footer-dummy { height: 100px; }