@require 'icons'
@require 'sprite'

$widthPage = 1150px;
$widthColumnRight = 300px;
$widthColumnCenter = $widthPage - $widthColumnRight;
$paddingColumnCenter = 15px;
$heightFooter = 100px;

$colorBlue = #6ebed3;
$colorGray = #afafaf;
$colorGrayText = #5f5f5f;
$colorLink = $colorBlue;

$fontH1 = 24px;
$fontDefault = 15px;

html, body { margin: 0; padding: 0; width: 100%; height: 100%;
  font-family: Arial, Tahoma;
  color: $colorGrayText;
}
html * { color: $colorGrayText; }
html { background: url("./../images/bg-fon.jpg"); }
body { background: url("./../images/bg-fon-line.png") }

h1 { color: $colorBlue; font-size: $fontH1; }

a { color: $colorGray; text-decoration: none; transition:color 0.3s ease; }
a:hover { color: $colorBlue; text-decoration: underline; }

.wrapper-content { width: $widthPage; min-height: 100%; margin: 0 auto; background-color: #ffffff; }

.header {
  height: 120px;
  position: relative;
  background: $colorBlue;
}

.column-right {
  float: right;
  box-sizing: border-box; width: $widthColumnRight;
  border-right: 1px dashed $colorGray; }
.column-center {
  width: $widthColumnCenter; padding-right: $paddingColumnCenter;
  box-sizing: border-box;
  float: right;  }
.footer {
  background: $colorBlue;
  $footer-color = #626262;
  $footer-font-size = 18px;
  height: $heightFooter; width: $widthPage; margin-top: -($heightFooter);
  padding: 15px 25px; box-sizing: border-box;
  font-size: $footer-font-size;
}
.footer-dummy { height: $heightFooter; }
.wrapper-content-foother { width: $widthPage; margin: 0 auto; }

.image-side {
  height: 412px;
  background: $colorBlue;
  margin-top: 15px;
}

.subscribe-side {
  height: 200px;
  background: $colorBlue;
  margin-top: 15px;
}

.social-side {
  height: 100px;
  background: $colorBlue;
  margin-top: 15px;
  margin-bottom: 15px;
}

.social-share {
  height 60px; margin: 15px 0;
  background: $colorBlue;
}

.post-item {
  margin: 12px 0 30px 0;

  &-title {
    margin-bottom: 2px;
    & * { font-size: 22px; color: darken($colorGrayText,  50%); }
  }
  &-text {
    margin-bottom: 8px;
    font-size: 18px;

    & > p {
      padding: 0;
      margin: 0;
    }
  }

  $fontRubricInfo = 13px;
  &-info {
    font-size: $fontRubricInfo;
    margin-bottom: 1px;
    &>span { margin: 0 15px 0 0; }
  }
  &-filter {
    font-size: $fontRubricInfo; margin-bottom: 5px;
    & i { margin-right: 5px; }
  }
}

.post-page {
  padding: 0 10px;
}